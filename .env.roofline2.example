# Required
WLED_TREE_URL=http://172.16.200.52

# Identity
AGENT_ID=roofline2
AGENT_NAME=Roofline 2nd Floor
AGENT_ROLE=roofline

# Recommended: shared key required for /v1/a2a/* and /v1/fleet/* (set the same on all agents)
A2A_API_KEY=

# Optional: enable /v1/command on this agent too
# OPENAI_API_KEY=
# OPENAI_MODEL=gpt-5-mini

# Optional: mobile-friendly UI + local login
UI_ENABLED=true
AUTH_ENABLED=false
AUTH_USERNAME=admin
AUTH_PASSWORD=
AUTH_JWT_SECRET=
AUTH_JWT_TTL_S=43200
AUTH_COOKIE_SECURE=false
AUTH_TOTP_ENABLED=false
AUTH_TOTP_SECRET=
AUTH_TOTP_ISSUER=wled-show-agent

# Common safety defaults
WLED_MAX_BRI=180
WLED_COMMAND_COOLDOWN_MS=250
WLED_HTTP_TIMEOUT_S=2.5

# If your roofline controller has multiple segments, list them here (otherwise leave blank)
# WLED_SEGMENT_IDS=0

DATA_DIR=/data

# Database (required; shared across fleet)
DATABASE_URL=mysql://wsa:wsa@db:3306/wsa
