# Mega Tree (fleet coordinator) â€” example

# Required
WLED_TREE_URL=http://172.16.200.50

# Identity
AGENT_ID=tree
AGENT_NAME=Mega Tree
AGENT_ROLE=tree

# Recommended: shared key required for /v1/a2a/* and /v1/fleet/* (set the same on all agents)
A2A_API_KEY=

# Peers (docker compose service names work inside the compose network)
A2A_PEERS=roofline1=http://roofline1:8088,roofline2=http://roofline2:8088,star_wled=http://star_wled:8088,star_esps=http://star_esps:8088

# Optional: enable /v1/command on the coordinator
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini

# Optional: mobile-friendly UI + local login
UI_ENABLED=true
AUTH_ENABLED=false
AUTH_USERNAME=admin
AUTH_PASSWORD=
AUTH_JWT_SECRET=
AUTH_JWT_TTL_S=43200
AUTH_COOKIE_SECURE=false
AUTH_TOTP_ENABLED=false
AUTH_TOTP_SECRET=
AUTH_TOTP_ISSUER=wled-show-agent

# Optional: Falcon Player (FPP) control (agent -> FPP)
FPP_BASE_URL=
FPP_HTTP_TIMEOUT_S=2.5
FPP_HEADERS_JSON=

# Common safety defaults
WLED_MAX_BRI=180
WLED_COMMAND_COOLDOWN_MS=250
WLED_HTTP_TIMEOUT_S=2.5

# Example multi-segment tree
WLED_SEGMENT_IDS=0,1,2,3
WLED_REPLICATE_TO_ALL_SEGMENTS=true

# DDP (realtime) defaults
DDP_HOST=
DDP_PORT=4048
DDP_DESTINATION_ID=1
DDP_MAX_PIXELS_PER_PACKET=480
DDP_FPS_DEFAULT=20
DDP_FPS_MAX=45

DATA_DIR=/data

# Database (required; shared across fleet)
DATABASE_URL=mysql://wsa:wsa@db:3306/wsa
